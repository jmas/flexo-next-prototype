{% block assets %}
{{ add_asset('js', get_res_url('core/jquery/jquery.min.js')) }}
{{ add_asset('js', get_res_url('core/bootstrap/js/bootstrap.min.js')) }}
{{ add_asset('js', get_res_url('core/bootstrap.js')) }}
{{ add_asset('css', get_res_url('core/bootstrap/css/bootstrap.min.css')) }}
{{ add_asset('font', get_res_url('core/bootstrap/fonts/glyphicons-halflings-regular.eot')) }}
{{ add_asset('font', get_res_url('core/bootstrap/fonts/glyphicons-halflings-regular.svg')) }}
{{ add_asset('font', get_res_url('core/bootstrap/fonts/glyphicons-halflings-regular.ttf')) }}
{{ add_asset('font', get_res_url('core/bootstrap/fonts/glyphicons-halflings-regular.woff')) }}
{{ add_asset('font', get_res_url('core/bootstrap/fonts/glyphicons-halflings-regular.woff2')) }}
{% endblock %}
<!doctype html>
<html>
<head>
	<title>{% if title %}{{ title }} &ndash; {% endif %}{{ settings.siteName }}</title>
	{% include "core/helpers/assets-css.twig" %}
</head>
<body>

{% include "core/helpers/nav.twig" %}

<div class="container">
    {% include 'core/helpers/alerts.twig' with { 'alerts': flash.getMessage('error'), 'type': 'warning' } %}
    {% include 'core/helpers/alerts.twig' with { 'alerts': flash.getMessage('success'), 'type': 'success' } %}
	{% block body %}
	{% endblock %}
</div>

{% include "core/helpers/assets-js.twig" %}
</body>
</html>
