{% extends "core/layouts/main.twig" %}

{% block body %}
<p>
    <a class="btn btn-default" href="{{ path_for('modules-home') }}"><i class="glyphicon glyphicon-chevron-left"></i> Back to Modules Home</a>
    <a class="btn btn-default" href="{{ path_for('modules-repository') }}?renewCache=1"><i class="glyphicon glyphicon-refresh"></i> Renew Cache</a>
</p>
<hr>
<div class="panel panel-default">
    <div class="panel-heading">Modules Repository</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Search by Module name or Description">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-right">
                <label class="btn btn-default">
                    <input type="checkbox">
                    Hide installed
                </label>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th width="350">Author</th>
                    <th width="200">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for moduleItem in modules %}
                <tr>
                    <td>
                        {{ moduleItem.manifest.name }}
                    </td>
                    <td>
                        {% include 'modules/helpers/authors.twig' with { 'authors': moduleItem.manifest.authors } %}
                    </td>
                    <td>
                        <button class="btn btn-sm btn-success">Install</button>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
